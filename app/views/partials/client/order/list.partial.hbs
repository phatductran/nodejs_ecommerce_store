{{!-- Open orders --}}
<div class="row">
  <div class="col-sm-12">
    <div class="card-header bg-primary">
      <p class="text-white">Open orders</p>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ID</td>
              <th>Total</th>
              <th>Payment</th>
              <th>Created At</th>
              <th>Status</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            {{#if orders}}
            {{#each orders}}
            {{#ifor status 'done' 'canceled'}} {{else}}
            <tr>
              <td>{{{id}}}</td>
              <td>${{{totalCost}}}</td>
              <td style="text-transform: uppercase;">{{{paymentMethod}}}</td>
              <td>{{{formatDate createdAt}}}</td>
              <td 
                {{#ifeq status 'processing'}}
                class="btn-info text-uppercase text-center"
                {{/ifeq}}
                {{#ifeq status 'packing'}}
                class="text-uppercase text-center"
                style="background-color: #6d60b0;"
                {{/ifeq}}
                {{#ifeq status 'delivering'}}
                class="text-uppercase text-center"
                style="background-color: #f06292;"
                {{/ifeq}}
                {{#ifeq status 'done'}}
                class="btn-success text-uppercase text-center"
                {{/ifeq}}
                {{#ifeq status 'canceled'}}
                class="btn-warning text-uppercase text-center"
                {{/ifeq}}
                >
                {{{status}}}
              </td>
              <td class="text-center">
                <a href="/my-orders/view/{{{id}}}" class="btn btn-info"
                  style="line-height: 12px; font-size: 14px; padding: 5px; border: none;">
                  <i class="fa fa-eye"></i>
                </a>
              </td>
            </tr>
            {{/ifor}}
            {{/each}}
            

            {{else}}
            <tr class="bg-secondary">
              <td colspan="6" class="font-italic">No orders</td>
            </tr>
            {{/if}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<hr class="my-4">
{{!-- Closed orders --}}
