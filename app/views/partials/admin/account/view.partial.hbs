<div class="row p-3 m-2">
  <div class="p-0 col-3 d-flex flex-column justify-content-start align-items-center">
    <div class="my-3 ">
      {{#if account.profile.avatar}}
      <img class="img-thumbnail" id="avatar-block" alt="200x200" style="width: 200px; height: 200px;"
        src="data:image/jpeg;base64,{{{account.profile.avatar}}}" data-holder-rendered="true">
      {{else}}
      <img src="/static/default-user.png" id="avatar-block" alt="200x200" style="width: 200px; height: 200px;"
        data-holder-rendered="true" class="img-thumbnail">
      {{/if}}
    </div>
    <div class="my-2  view-lower-left-col">
      <ul>
        <li class="d-flex bg-purple justify-content-between">
          <span><i class="ion ion-android-user-menu mr-2"></i>ID </span>
          <span>{{{account.id}}}</span>
        </li>
        <li class="d-flex bg-purple justify-content-between">
          <span><i class="ion ion-android-note mr-2"></i>Status </span>
          {{#ifeq account.status 'activated'}}
          <span class="text-light bg-success px-2"><i class="ion ion-checkmark-round mr-2"></i>{{{account.status}}}</span>
          {{/ifeq}}
          {{#ifeq account.status 'deactivated'}}
          <span class="text-light bg-danger px-2"><i class="ion ion-checkmark-round mr-2"></i>{{{account.status}}}</span>
          {{/ifeq}}
          {{#ifeq account.status 'pending'}}
          <span class="text-light bg-warning px-2"><i class="ion ion-more mr-2"></i>{{{account.status}}}</span>
          {{/ifeq}}
          {{#ifeq account.status 'reset password'}}
          <span class="text-light bg-lime px-2"><i class="ion ion-refresh mr-2"></i>{{{account.status}}}</span>
          {{/ifeq}}
        </li>
        <li class="d-flex bg-purple justify-content-between">
          <span><i class="mdi mdi-account-card-details mr-2"></i>Role </span>
          {{#ifeq account.role 'admin'}}
          <span><i class="ion-ribbon-b mr-2 text-lime"></i>{{{account.role}}}</span>
          {{else}}
          <span>{{{account.role}}}</span>
          {{/ifeq}}
        </li>
        <li class="d-flex bg-purple justify-content-between">
          <span><i class="ion ion-calendar mr-2"></i>Created at </span>
          <span>{{{formatDate account.createdAt}}}</span>
        </li>
      </ul>
    </div>
  </div>
  {{!-- Right column --}}
  <div class="pl-3 col">
    {{!-- Username --}}
    <div class="form-group mt-2">
      <label for="userID" class="mb-2"><i class="mdi mdi-account-location mr-2"></i>Username</label>
      <div class="input-group">
        <input type="text" name="userID" placeholder="" value="{{{account.username}}}" class="form-control" disabled>
      </div>
    </div>
    {{!-- Email --}}
    <div class="form-group mt-2">
      <label for="userID" class="mb-2"><i class="ion ion-ios7-email mr-2"></i>Email</label>
      <div class="input-group">
        <input type="text" name="userID" placeholder="" value="{{{account.email}}}" class="form-control" disabled>
      </div>
    </div>
    {{!-- First Name -- Last Name --}}
    <div class="form-group row mt-2">
      <div class="col-6">
        <label for="firstName" class="mb-2">
          <i class="mdi mdi-account-card-details mr-2"></i>First Name</label>
        <input type="text" id="firstName" name="firstName" placeholder="" value="{{{account.profile.firstName}}}" class="form-control" disabled>
      </div>

      <div class="col-6">
        <label for="lastName" class="mb-2">
          <i class="mdi mdi-account-card-details mr-2"></i>Last Name</label>
        <input type="text" id="lastName" name="lastName" placeholder="" value="{{{account.profile.lastName}}}" class="form-control" disabled>
      </div>
    </div>
    {{!-- Gender --}}
    <div class="form-group mt-2">
      <label class="mb-2"><i class="mdi mdi-gender-transgender mr-2"></i>Gender</label>
      <div class="col-5 my-auto d-flex flex-row justify-content-start align-items-center">
        {{#ifMatch account.profile.gender 'male'}} 
        <label for="male" id="male-lbl" class="btn btn-info mr-2 my-auto selected">
          <i class="mdi mdi-gender-male mr-1"></i>Male
        </label>
        <input value="male" id="male" type="radio" name="gender" class="form-control" hidden="true" checked>
        {{/ifMatch}}

        {{#ifMatch account.profile.gender 'female'}} 
        <label for="female" id="female-lbl" class="mr-2 my-auto btn btn-pink selected" >
          <i class="mdi mdi-gender-female mr-1"></i>Female
        </label>
        <input value="female" id="female" type="radio" name="gender" class="form-control" hidden="true" checked>
        {{/ifMatch}}

        {{#ifMatch account.profile.gender 'lgbt'}} 
        <label for="lgbt" id="lgbt-lbl" class="mr-2 my-auto btn btn-rainbow selected"
          onclick="selectGender(this)" >
          <i class="mdi mdi-gender-transgender mr-1"></i>LGBT
        </label>
        <input value="lgbt" id="lgbt" type="radio" name="gender" class="form-control" hidden="true" checked>
        {{/ifMatch}}
      </div>
    </div>
    {{!-- Date of birth --}}
    <div class="form-group mt-2">
      <label for="dateOfBirth" class="mb-2"><i class="mdi mdi-cake-variant mr-2"></i>Date of birth</label>
      <div class="input-group">
        <input type="text" name="dateOfBirth" placeholder="mm/dd/yyyy" id="datepicker-autoclose"
          value="{{{formatDate account.profile.dateOfBirth}}}" class="form-control" disabled>
        <div class="input-group-append">
          <span class="input-group-text"><i class="mdi mdi-calendar"></i></span>
        </div>
      </div>
    </div>

    {{!-- Phone number --}}
    <div class="form-group mt-2">
      <label for="phoneNumber" class="mb-2"><i class="mdi mdi-cellphone-basic mr-2"></i>Phone number</label>
      <div class="input-group">
        <input type="text" name="phoneNumber" id="phoneNumber" placeholder="" value="{{{account.profile.phoneNumber}}}" class="form-control" disabled>
        <div class="input-group-append">
          <span class="input-group-text"><i class="ion-ios7-telephone"></i></span>
        </div>
      </div>
    </div>

  </div>
</div>