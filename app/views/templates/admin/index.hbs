{{!-- Yearly --}}
<div class="row">
	<div class="col-md-6 col-xl-3">
		<div class="mini-stat clearfix bg-white">
			<span class="mini-stat-icon bg-purple mr-0 float-right"><i class="mdi mdi-basket"></i></span>
			<div class="mini-stat-info">
				<span class="counter text-purple">{{{formatFloatNumber yearlyStatistics.totalSalesData.totalSales}}}</span>
				Total Sales
			</div>
			<div class="clearfix"></div>
			<p class=" mb-0 m-t-20 text-muted">Revenue: {{{formatPrice yearlyStatistics.totalSalesData.revenue}}}
				<span class="pull-right">
				{{#lessThan yearlyStatistics.totalSalesData.diff 0}}
				<i class="fa fa-caret-down m-r-5 text-danger"></i>
				{{else}}
				<i class="fa fa-caret-up m-r-5 text-success"></i>
				{{/lessThan}}
				{{{formatPercentage yearlyStatistics.totalSalesData.diff}}} %</span>
			</p>
		</div>
	</div>
	<div class="col-md-6 col-xl-3">
		<div class="mini-stat clearfix bg-white">
			<span class="mini-stat-icon bg-blue-grey mr-0 float-right"><i class="mdi mdi-archive"></i></span>
			<div class="mini-stat-info">
				<span class="counter text-blue-grey">{{{formatFloatNumber yearlyStatistics.totalOrdersData.totalOrders}}}</span>
				New Orders
			</div>
