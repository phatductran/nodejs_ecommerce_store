<form action="/my-account/change-password" method="POST">
{{>csrf}}
  <div class="form-group">
    <label for="password">Current Password</label>
    {{#if errors.password}}
    <input type="password" name="password" id="password" placeholder="Enter your password.">
    {{#with errors.password}}
    {{> client/error.partial}}
    {{/with}}
    {{else}}
    <input type="password" name="password" id="password" placeholder="Enter your password.">
    {{/if}}
  </div>
  <div class="form-group row">
    <div class="col-sm-6">
      <label for="new_password">New password</label>
      {{#if errors.new_password}}
      <input type="password" name="new_password" id="new_password" placeholder="Enter your new password.">
      {{#with errors.new_password}}
      {{> client/error.partial}}
      {{/with}}
      {{else}}
      <input type="password" name="new_password" id="new_password" placeholder="Enter your new password.">
      {{/if}}
    </div>
    <div class="col-sm-6">
      <label for="confirm_new_password">Confirm password</label>
      {{#if errors.confirm_new_password}}
      <input type="password" name="confirm_new_password" id="confirm_new_password"
        placeholder="Confirm your new password.">
      {{#with errors.confirm_new_password}}
      {{> client/error.partial}}
      {{/with}}
      {{else}}
      <input type="password" name="confirm_new_password" id="confirm_new_password"
        placeholder="Confirm your new password.">
      {{/if}}
    </div>
  </div>
  <div class="form-group text-right">
    <button class="btn btn-primary">Update password</button>
  </div>
</form>