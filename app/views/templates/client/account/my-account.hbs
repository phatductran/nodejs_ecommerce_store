{{!-- Mm account --}}
<section class="flat-row main-shop shop-detail style-1">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-header">
            <h5>
              My account
            </h5>
          </div>
          <div class="card-body p-3">
            <div class="row">
              <div class="col-sm-3 border-right">
                {{!-- Avatar --}}
                <div class="p-1 text-center">
                  <div class="my-1">
                  {{#if user.profile}}
                    {{#if user.profile.avatar.urlLink}}
                    <img src="{{{user.profile.avatar.urlLink}}}" id="avatar-block" alt="200x200"
                      style="width: 200px; height: 200px;" data-holder-rendered="true" class="img-thumbnail">
                    {{else}}
                    {{#ifeq user.profile.avatar.fileName 'default'}}
                    <img src="/public/default-user.png" id="avatar-block" alt="200x200"
                      style="width: 200px; height: 200px;" data-holder-rendered="true" class="img-thumbnail">
                    {{else}}
                    <img class="img-thumbnail" id="avatar-block" alt="200x200" style="width: 200px; height: 200px;"
                      src="data:{{{user.profile.avatar.mimeType}}};base64,{{{parseImageToString user.profile.avatar.data}}}"
                      data-holder-rendered="true">
                    {{/ifeq}}
                    {{/if}}
                  {{else}} 
                    <img src="/public/default-user.png" id="avatar-block" alt="200x200"
                      style="width: 200px; height: 200px;" data-holder-rendered="true" class="img-thumbnail">
                  {{/if}}
                  </div>
                  <div class=" my-2">
                    <label for="avatar" class="btn btn-primary waves-effect waves-light active"
                      onclick="invokeAvatarInp">
                      <i class="fa fa-cloud-upload mr-1"></i> Change avatar
                    </label>
                  </div>

                </div>
                {{!-- Tab list --}}
                <div class="list-group" id="myList" role="tablist">
                  <a class="list-group-item list-group-item-action active" data-toggle="list" href="#profile"
                    role="tab"><i class="fa fa-user mr-2"></i> Profile</a>
                  <a class="list-group-item list-group-item-action" data-toggle="list" href="#address" role="tab"><i
                      class="fa fa-home mr-2"></i> Address</a>
                  <a class="list-group-item list-group-item-action" data-toggle="list" href="#change-pwd" role="tab"><i
                      class="fa fa-key mr-2"></i>Change password</a>
                </div>
              </div>
              <div class="col-sm-9">
                <div class="tab-content">
                  {{> flash}}
                  <div class="tab-pane p-2 {{#ifeq tabContent 'profile'}}  active {{/ifeq}}" 
                  id="profile" role="tabpanel">
                    {{> client/account/profile.partial}}
                  </div>
                  <div class="tab-pane p-2 {{#ifeq tabContent 'address'}}  active {{/ifeq}}" 
                  id="address" role="tabpanel">
                    {{> client/account/address.partial}}</div>
                  <div class="tab-pane p-2 {{#ifeq tabContent 'change-password'}}  active {{/ifeq}}" 
                  id="change-pwd" role="tabpanel">
                    {{> client/account/change-pwd.partial}}</div>
                </div>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>