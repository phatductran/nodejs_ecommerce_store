{{!-- Mm account --}}
<section class="flat-row main-shop shop-detail style-1">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="card">
          <div class="card-header">
            <h5>
              My orders
            </h5>
          </div>
          <div class="card-body p-3">
            <div class="row">
              <div class="col-sm-3 border-right">
                <div class="list-group" id="myList" role="tablist">
                  <a class="list-group-item list-group-item-action active" data-toggle="list" href="#all-orders"
                    role="tab"><i class="fa fa-user mr-2"></i>All orders</a>
                  <a class="list-group-item list-group-item-action" data-toggle="list" href="#open-orders" role="tab"><i
                      class="fa fa-home mr-2"></i> Open orders</a>
                </div>
              </div>
              <div class="col-sm-9">
                <div class="tab-content">
                  {{#if detail}}
                  {{> client/order/detail.partial}}
                  {{else}}
                  {{/if}}
                  <div class="tab-pane active p-2" id="all-orders" role="tabpanel">
                    {{> client/order/list.partial}}
                  </div>
                  <div class="tab-pane p-2" id="open-orders" role="tabpanel">
                    {{> client/order/list.partial}}
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>