<div class="row p-3 m-2">
    <div class="col-12">
        <form class="form-horizontal p-3" action="/admin/change-password" method="POST">
            {{> csrf}}
            <div class="form-group mt-2">
                <label for="password" class="mb-2"><i class="mdi mdi-key mr-2"></i>Current Password</label>
                <div class="input-group">
                    {{#if errors.password}}
                    <input type="password" id="password" name="password" required class="form-control parsley-error" value="{{{errors.password.value}}}">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi mdi-key"></i></span>
                        </div>
                    </div>
                    {{#with errors.password}}
                    {{> admin/error.partial }}
                    {{/with}}
                    {{else}}
                        {{!-- First load  --}}
                        <input type="password" id="password" name="password" required class="form-control" placeholder="Enter CURRENT password">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi mdi-key"></i></span>
                        </div>
                    </div>
                    {{/if}}
            </div>

            <div class="form-group mt-2">
                <label for="new_password" class="mb-2"><i class="mdi mdi-lock-plus mr-2"></i>New password</label>
                <div class="input-group">
                    {{#if errors.new_password}}
                    <input type="password" name="new_password" id="new_password" required class="form-control parsley-error" placeholder="Enter NEW password">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi mdi-lock-plus"></i></span>
                        </div>
                    </div>
                    {{#with errors.new_password}}
                    {{> admin/error.partial }}
                    {{/with}}
                    {{else}}
                        {{!-- First load  --}}
                        <input type="password" name="new_password" id="new_password" required class="form-control" placeholder="Enter NEW password">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi mdi-lock-plus"></i></span>
                        </div>
                    </div>
                    {{/if}}
            </div>

            <div class="form-group mt-2">
                <label for="confirm_new_password" class="mb-2"><i class="mdi mdi-lock-plus mr-2"></i>Confirm new password</label>
                <div class="input-group">
                    {{#if errors.confirm_new_password}}
                    <input type="password" name="confirm_new_password" id="confirm_new_password" required class="form-control parsley-error"  placeholder="Confirm NEW password">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi mdi-lock-plus"></i></span>
                        </div>
                    </div>
                    {{#with errors.confirm_new_password}}
                    {{> admin/error.partial }}
                    {{/with}}
                    {{else}}
                        {{!-- First load  --}}
                        <input type="password" name="confirm_new_password" id="confirm_new_password" required class="form-control" placeholder="Confirm NEW password">
                        <div class="input-group-append">
                            <span class="input-group-text"><i class="mdi mdi-lock-plus"></i></span>
                        </div>
                    </div>
                    {{/if}}
            </div>

            <div class="form-group row m-t-30">
                <div class="col-12 text-right">
                    <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Change</button>
                </div>
            </div>
        </form>
    </div>
</div>