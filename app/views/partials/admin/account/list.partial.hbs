<h4 class="mt-0 header-title">Table of accounts</h4>
<p class="text-muted m-b-30 font-14">Each account has a unique ID. Management features are added in the 'Action' column.
</p>

<table id="datatable-buttons" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0"
    width="100%">
    <thead>
        <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Email</th>
            <th class="text-center">Role</th>
            <th class="text-center">Status</th>
            <th class="text-center">Created at</th>
            <th class="text-center">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each accounts}}
        <tr>
            <td id="{{{_id}}}">{{{_id}}}</td>
            <td>{{{username}}}</td>
            <td>{{{email}}}</td>
            <td class="capitalized text-center">
                {{#ifMatch role 'admin'}}
                <i class="ion-ribbon-b mr-1 text-lime"></i>
                {{/ifMatch}}
                {{{role}}}
            </td>
            {{#ifeq status 'activated'}}
            <td class="bg-teal text-white capitalized text-center">
                {{else}}
            <td class="bg-danger text-white capitalized text-center">
                {{/ifeq}}
                {{{status}}}
            </td>
            <td class="text-center">{{#formatShortDate createdAt}} {{/formatShortDate}}</td>
            <td class="text-center">
                <div class="btn-group">
                    <button class="btn btn-secondary" type="button" data-toggle="dropdown"
                        aria-haspopup="true" aria-expanded="false">
                        <i class="ion-more font-18"></i>
                    </button>
                    <div class="dropdown-menu dropdown-menu-right">
                        <a class="dropdown-item" href="/admin/accounts/edit/{{{_id}}}" >
                            <i class="ion-edit mr-2"></i> Edit
                        </a>
                        {{#ifeq status 'activated'}}
                        <a class="dropdown-item sa-deactivate" href="javascript:void(0);" data-uid="{{{_id}}}">
                            <i class="ion-minus-round mr-2"></i> Deactivate
                        {{else}}
                        <a class="dropdown-item sa-activate" href="javascript:void(0);" data-uid="{{{_id}}}">
                            <i class="ion-checkmark-round mr-2"></i> Activate
                        {{/ifeq}} 
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="ion-ios7-eye mr-2"></i> View
                        </a>
                        <a class="dropdown-item" href="#">
                            <i class="ion-ios7-reload mr-2"></i> Reset password
                        </a>
                        <a class="dropdown-item sa-delete" href="javascript:void(0);" data-uid="{{{_id}}}">
                            <i class="ion-trash-a mr-2"></i> Delete
                        </a>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item mr-2" href="#">Separated link</a>
                    </div>
                </div>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>