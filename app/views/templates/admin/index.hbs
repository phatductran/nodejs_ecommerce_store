{{!-- Latest orders --}}
<div class="row">
	<div class="col-xl-12">
		<div class="card m-b-20">
			<div class="card-body">
				<h4 class="mt-0 m-b-30 header-title">Latest Orders</h4>

				<div class="table-responsive">
					<table class="table table-vertical mb-0">
						<thead>
							<tr>
								<th>#ID</th>
								<th>User</th>
								<th>Status</th>
								<th>Final cost</th>
								<th>Ordered at</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							{{#each latestOrders}}
							<tr>
								<td>{{{id}}}</td>
								<td>
									{{#if userId}}
									{{{this.userId.username}}}
									{{else}}
									Anonymous
									{{/if}}
								</td>
								<td>
									<span class="badge badge-pill p-2 capitalized
									{{#ifMatch status 'processing'}}
									badge-primary 
									{{/ifMatch}}
									{{#ifMatch status 'packing'}}
									badge-purple 
									{{/ifMatch}}
									{{#ifMatch status 'delivering'}}
									badge-pink 
									{{/ifMatch}}
									{{#ifMatch status 'done'}}
									badge-success 
									{{/ifMatch}}
									{{#ifMatch status 'cancelled'}}
									badge-orange 
									{{/ifMatch}}
									" style="font-size: 15px">
										{{{status}}}
									</span>
								</td>
								<td>
									{{{formatPrice finalCost}}}
								</td>
								<td>
									{{{formatDate createdAt}}}
								</td>
								<td>
									<a href="/admin/orders/view/{{{id}}}" class="btn btn-secondary btn-sm waves-effect">View details</a>
								</td>
							</tr>
							{{/each}}

						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>
<!-- end row -->