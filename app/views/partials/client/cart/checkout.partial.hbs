<div class="container">
  <div class="row">
    <div class="col-sm-12 table-responsive">
      <form id='checkout-form' action="/checkout" method="POST">
      {{> csrf}}
        {{!-- Customer info --}}
        <div class="card">
          <div class="card-header">
            Choose a payment method
          </div>
          <div class="card-body p-3">
            <div class="row">
              <div class="col-sm-12 pl-4">
                <input type="radio" name="paymentMethod" value="COD" id="pay-with-cod" checked onchange="toggleCreditInfo(this)">
                <label for="COD" class="ml-2">Cash On Delivery (COD)</label>
              </div>
              <div class="col-sm-12 pl-4">
                <input type="radio" name="paymentMethod" id="pay-with-cc" value="CREDITCARD" onchange="toggleCreditInfo(this)">
                <label for="CREDITCARD" class="ml-2">VISA/MASTER</label>
              </div>
            </div>

            {{!-- Credit card info --}}
            <div id='card-info-container' class="mt-4 card d-none">
              <div class="card-header">
                <i class="fa fa-credit-card mr-2"></i>Card info
              </div>
              <div class="card-body p-3">
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">      
                      <label for="nameOnCard">Name on card</label>
                      <input type="text" name="nameOnCard" id="nameOnCard" placeholder="Name on card">
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">      
                      <label for="cardNumber">Card number</label>
                      <input type="text" name="cardNumber" id="cardNumber" placeholder="Card number">
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">      
                      <label for="validUntil">Valid until</label>
                      <div class="row">
                        <div class="col-sm-5">
                          <select name="validUntil-month" id="validUntil-month">
                            <option value="1">1</option>
                            <option value="2">2</option>
                          </select>
                        </div>
                        <div class="col-sm-5">
                          <select name="validUntil-year" id="validUntil-year">
                            <option value="2000">2000</option>
                            <option value="2000">2000</option>
                          </select>
                        </div>
                      </div>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">      
                      <label for="cvv">CVV <span class="font-italic">(Authorized signature)</span></label>
                      <input type="text" name="cvv" id="cvv" placeholder="Example: 123">
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          {{!-- Order button --}}
          <div class="col-sm-12 mb-3 d-flex justify-content-end">
            <div class="add-to-cart mr-0">
              <button id="checkout-btn" type="submit">Order</button>
            </div>
          </div>
        </div>
      </form>
    </div>

  </div>
  <!-- /.row -->
</div>
<!-- /.container -->