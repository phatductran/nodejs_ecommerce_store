{{> client/page-title.partial}}

<section class="flat-row main-shop">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        {{#if products }}
        <div class="filter-shop clearfix">
          <p class="showing-product">
            {{#ifeq pageTitle 'Search'}}
            Found <span class="text-danger font-weight-600">{{{products.length}}}</span>  products
            {{else}}
              {{#lessThan products.length 13}}
                {{#lessThan products.length 2}}
              Showing 1 Product
                {{else}}
              Showing 1–{{{products.length}}} Products
                {{/lessThan}}
              {{else}}
              {{!-- More than 12 products --}}
              Showing {{{multiply pagination.currentPage 1}}}–{{{multiply pagination.currentPage 12}}} of {{{products.length}}} Products
              {{/lessThan}}
            {{/ifeq}}
          </p>
        </div><!-- /.filter-shop -->
        
        {{!-- PRoducts --}}
        <div class="product-content product-fivecolumn clearfix">
          <ul class="product style3">
            {{#each products}}
            <li class="product-item" id="product-box-{{{id}}}" data-name="{{{name}}}" data-size="{{{details.size}}}" data-price="{{{price}}}">
              <div class="product-thumb clearfix">
                <a href="/product?id={{{id}}}">
                  <img id="product-image-{{{id}}}" src="data:{{{gallery.0.mimeType}}};base64,{{{print64baseProductImg gallery.0.fileName gallery.0.extension}}}" alt="image" style="width: 195px; height:178px;">
                </a>
                <span class="new sale">{{{subcategory.name}}}</span>
              </div>
              <div class="product-info clearfix">
                <span class="product-title">{{{name}}}</span>
                <div class="price">
                  {{!-- <del>
                    <span class="regular">$130.00</span>
                  </del> --}}
                  <ins>
                    <span class="amount">{{{formatPrice price}}}</span>
                  </ins>
                </div>
              </div>
              <div class="add-to-cart text-center" data-product-id="{{{id}}}">
                <a href="javascript:void(0);">ADD TO CART</a>
              </div>
            </li>
            {{/each}}
          </ul><!-- /.product -->
        </div><!-- /.product-content -->
        
        {{> client/pagination.partial}}

        {{else}}
        <p class="p-4 font-italic">No product</p>
        {{/if}}
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-row -->