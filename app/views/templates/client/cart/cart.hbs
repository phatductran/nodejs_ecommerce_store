<section class="flat-row main-shop shop-detail style-1">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-8">
        {{!-- <div class="row p-4"> --}}
        <div class="table-responsive">
          <form action="#" method="POST">
            <table class="table table-striped table-bordered">
              <thead class="thead-dark">
                <tr id='shopping-cart-header'>
                  <th colspan="5" class="text-center">
                    <h5 class="mb-0"><i class="fa fa-shopping-bag mr-2"></i> Shopping cart</h5>
                  </th>
                </tr>
                <tr>
                  <th><strong>Product</strong></th>
                  <th class="text-center"><strong>Size</strong></th>
                  <th class="text-center"><strong>Amount</strong></th>
                  <th class="text-center"><strong>Price</strong></th>
                  <th class="text-center"></th>
                </tr>
              </thead>

              <tbody>
                <tr>
                  <td>
                    <img src="/static/images/shop/sh-detail/thumb-pexels-bogdan-glisik-1661471.jpg" alt=""
                      class="cart-item-img">
                    <span class="ml-1 p-1">T-Shirt</span>
                  </td>
                  <td class="text-center">XL</td>
                  <td class="text-center">
                    <div class="amount-container">
                      <input type="number" value="0" min="0" max="100" step="1" name="amount" autocomplete="off" />
                    </div>
                  </td>
                  <td class="text-center">$21</td>
                  <td class="text-center">
                    <a href="#" class="btn btn-danger" id="remove-cart-item">
                      <i class="fa fa-trash"></i>
                    </a>
                  </td>
                </tr>
              </tbody>
            </table>

            <div class="row justify-content-between">
              <div class="col-sm-4">
                <a href="#" class="text-primary">
                  <i class="fa fa-long-arrow-left mr-2"></i>
                  Continue shopping
                </a>
              </div>
              <div class="col-sm-4">
                <div class="card">
                  <div class="card-body p-3">
                    <div class="total-cost">
                      <p class=" d-flex justify-content-between">
                        <span>Subtotal:</span>
                        <span class="subtotal-cost-value">$1,000</span>
                      </p>
                      <p class=" d-flex justify-content-between">
                        <span>Shipping cost:</span>
                        <span class="shipping-cost-value">$1,00</span>
                      </p>
                      <hr>
                      <p class=" d-flex justify-content-between">
                        <span><strong>Total cost:</strong></span>
                        <span class="total-cost-value">$1,000</span>
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>


        {{!-- </div> --}}
      </div>
      <div class="col-sm-4">
        <div class="card">
          <div class="card-header">
            <h5>Payment Info</h5>
          </div>
          <div class="card-body p-3">
            <p class="mb-0 p-1">
              <span class="text-muted font-italic">
                <i class="fa fa-credit-card mr-1"></i>
                Payment method
              </span>
            </p>
            <hr class="mt-1 mb-2">
            <div class="form-group">
              <p class="mb-1">
                <input type="radio" name="paymentMethod" id="paymentMethod">
                <label for="paymentMethod" class="ml-2 mb-0">Credit card</label>
              </p>
              <p class="mb-1">
                <input type="radio" name="paymentMethod" id="paymentMethod">
                <label for="paymentMethod" class="ml-2 mb-0">COD</label>
              </p>
            </div>
            <div class="form-group">
              <p for="nameOnCard" class="mb-0">
                <span class="text-muted font-italic">
                  <i class="fa fa-credit-card mr-1"></i>
                Name on card
                </span>
              </p>
              <hr class="mt-1 mb-2">
              <input type="text" name="" id="" placeholder="Name on card">
            </div>
            <div class="form-group">
              <p for="nameOnCard" class="mb-0">  
                <span class="text-muted font-italic">
                  <i class="fa fa-credit-card mr-1"></i>
                Card number
                </span>
              </p>
              <hr class="mt-1 mb-2">
              <input type="text" name="" id="" placeholder="Card number">
            </div>
            <div class="form-group row">
              <div class="col-sm-8">
                <label for="nameOnCard">Expiration date:</label>
                <div class="row">
                  <div class="col-sm-4">
                    <select name="" id="">
                      <option value="1">1</option>
                    </select>
                  </div>
                  <div class="col-sm-8">
                    <select name="" id="">
                      <option value="1">2020</option>
                    </select>
                  </div>
                </div>
              </div>
              <div class="col-sm-4">
                <label for="nameOnCard">CVV:</label>
                <input type="text" name="" id="" placeholder="123">
              </div>
            </div>
            <div class="form-group row justify-content-end">
              <div class="col-sm-4 text-right">
              <button class="btn btn-danger">
                Checkout
              </button>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

          </form>
    <!-- /.row -->
  </div>
  <!-- /.container -->
</section>