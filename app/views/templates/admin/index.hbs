{{!-- Order statistics --}}
<div class="row">
	<div class="col-xl-3">
		<div class="card m-b-20">
			<div class="card-body">
				<h4 class="mt-0 header-title m-b-30">Cancelled Orders</h4>

				<div class="text-center">
					<input class="knob" data-width="120" data-height="120" data-linecap=round data-fgColor="#ffbb44"
						data-bgcolor="#36454e" value="{{{formatNumber orderStatistics.cancelledOrders.numOfOrders}}}" data-skin="tron" data-angleOffset="180" data-readOnly=true
						data-thickness=".1" />

					<div class="clearfix"></div>
					<span class="btn btn-sm btn-orange m-t-20">Cancelled</span>
					<ul class="list-inline row m-t-30 clearfix">
						<li class="col-6">
							<p class="m-b-5 font-18 font-600">{{{formatFloatNumber orderStatistics.cancelledOrders.purchasedAmount}}}</p>
							<p class="mb-0">Products</p>
						</li>
						<li class="col-6">
							<p class="m-b-5 font-18 font-600">{{{formatPrice orderStatistics.cancelledOrders.revenue}}}</p>
							<p class="mb-0">Revenue</p>
						</li>
					</ul>

				</div>
			</div>
		</div>
	</div>

	<div class="col-xl-3">
