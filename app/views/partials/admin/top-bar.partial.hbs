<!-- Top Bar Start -->
<div class="topbar">
    <nav class="navbar-custom">
        <!-- Search input -->
        <div class="search-wrap" id="search-wrap">
            <div class="search-bar">
                <input class="search-input" type="search" placeholder="Search" />
                <a href="#" class="close-search toggle-search" data-target="#search-wrap">
                    <i class="mdi mdi-close-circle"></i>
                </a>
            </div>
        </div>

        <ul class="list-inline float-right mb-0">
            <!-- Fullscreen -->
            <li class="list-inline-item dropdown notification-list hidden-xs-down">
                <a class="nav-link waves-effect" href="#" id="btn-fullscreen">
                    <i class="mdi mdi-fullscreen noti-icon"></i>
                </a>
            </li>
            
            <!-- User-->
            <li class="list-inline-item dropdown notification-list">
                <a class="nav-link dropdown-toggle arrow-none waves-effect nav-user" data-toggle="dropdown" href="#"
                    role="button" aria-haspopup="false" aria-expanded="false">
                    {{#if user.profile}}
                        {{#if user.profile.avatar.urlLink}}
                            <img alt="avatar-user" class="rounded-circle"
                            src="{{{user.profile.avatar.urlLink}}}">
                        {{else}}
                            {{#ifeq user.profile.avatar.fileName 'default'}}
                            <img src="/public/default-user.png" alt="avatar-user" class="rounded-circle">
                            {{else}}
                                {{#if user.profile.avatar.data}}
                                    <img alt="avatar-user" class="rounded-circle"
                                    src="data:{{{user.profile.avatar.mimeType}}};base64,{{{parseImageToString user.profile.avatar.data}}}">
                                {{/if}}
                            {{/ifeq}}
                        {{/if}}
                    {{else}}
                    <img src="/public/default-user.png" alt="avatar-user" class="rounded-circle">
                    {{/if}}
                </a>
                <div class="dropdown-menu dropdown-menu-right profile-dropdown ">
                    <a class="dropdown-item" href="/admin/profile"><i class="dripicons-user text-muted"></i> Account</a>
                    <a class="dropdown-item" href="/admin/change-password"><i class="fa fa-expeditedssl text-muted"></i> Change password</a>
                    <a class="dropdown-item" href="#"><span class="badge badge-success pull-right m-t-5">5</span><i class="dripicons-gear text-muted"></i> Settings</a>
                    <a class="dropdown-item" href="#"><i class="dripicons-lock text-muted"></i> Lock screen</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="/admin/logout"><i class="dripicons-exit text-muted"></i> Logout</a>
                </div>
            </li>
        </ul>

        <!-- Page title -->
        <ul class="list-inline menu-left mb-0">
            <li class="list-inline-item">
                <button type="button" class="button-menu-mobile open-left waves-effect">
                    <i class="ion-navicon"></i>
                </button>
            </li>
            <li class="hide-phone list-inline-item app-search">
                <h3 class="page-title">Dashboard</h3>
            </li>
        </ul>

        <div class="clearfix"></div>
    </nav>

</div>
<!-- Top Bar End -->