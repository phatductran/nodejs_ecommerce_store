<div class="row">
    <div class="col-12">
        <div class="card m-b-20">
            <div class="card-body d-flex flex-row justify-content-between align-items-center">
                <div>
                    {{#ifeq content 'list'}}
                    <button onclick="toAddPage()" type="button" class="btn btn-primary waves-effect waves-light">
                        <i class="ion-plus-circled mr-2"></i>Add
                    </button>
                    {{else}}
                    <button onclick="backward()" type="button" class="btn btn-blue-grey waves-effect waves-light">
                        <i class="ion-arrow-left-c"></i>
                    </button>
                    {{/ifeq}}
                </div>
                <div>
                    <h5 class="mb-0 mt-0 text-info text-center font-21">
                        {{{header}}}
                    </h5>
                </div>

                {{!-- breadcrumb --}}
                {{#ifMatch route 'accounts'}}
                    {{> admin/account/breadcrumb.partial }}
                {{/ifMatch}}
                {{#ifMatch route 'categories'}}
                    {{> admin/category/breadcrumb.partial }}
                {{/ifMatch}}
                {{#ifMatch route 'products'}}
                    {{> admin/product/breadcrumb.partial }}
                {{/ifMatch}}

            </div>
        </div>
    </div>
</div>
