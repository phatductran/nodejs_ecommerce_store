<!-- Login Form -->
<section class="flat-row flat-contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="title-section margin_bottom_17">
          <h2 class="title">
            Login
          </h2>
        </div><!-- /.title-section -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
    <div class="row">
      <div class="col-8 d-flex flex-column mx-auto px-4 ">
        <form novalidate="" class="contact-form" id="login-form" method="post" action="/login">
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="username" class="form-label">Username</label>
              <input type="text" name="username" id="username" placeholder="Enter username" required>
            </div>
          </div>
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="email" class="form-label">Email</label>
              <input type="email" name="email" id="email" placeholder="Enter email" required>
            </div>
          </div>
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="password" class="form-label">Password</label>
              <input type="password" name="password" id="password" placeholder="Enter password" required>
            </div>
          </div>
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="confirm_password" class="form-label">Confirm password</label>
              <input type="password" name="confirm_password" id="confirm_password" placeholder="Enter password" required>
            </div>
          </div>


          <div class="row form-group my-3">
            <div class="col-12">
            <button class="w-100 form-input contact-submit my-2">Register</button>
            </div>
          </div>
        </form>
        
        <div class="dropdown-divider my-4 " style="background-color: #333"></div>

        <div class="row mt-3">
          <div class="col pr-1">
            <a id="facebook-login" class="btn btn-primary w-100 my-1" style="text-transform: none;">
              <i class="fa fa-facebook-square mr-2"></i> Register with Facebook
            </a>
          </div>
          <div class="col p-0">
            <a id="google-login" class="btn btn-danger w-100 my-1" style="text-transform: none;">
              <i class="fa fa-google-plus-square mr-2"></i> Register with Google
            </a>
          </div>
          <div class="col pl-1">
            <a id="github-login" class="btn btn-dark w-100 my-1" style="text-transform: none;">
              <i class="fa fa-github mr-2"></i>Register with Github
            </a>
          </div>


        </div>
      </div>
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-row -->

<!-- End Login Form -->