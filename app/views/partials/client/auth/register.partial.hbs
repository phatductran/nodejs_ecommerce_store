<!-- Login Form -->
<section class="flat-row flat-contact">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="title-section margin_bottom_17">
          <h2 class="title">
            Register
          </h2>
        </div><!-- /.title-section -->
      </div><!-- /.col-md-12 -->
    </div><!-- /.row -->
    <div class="row">
      <div class="col-8 d-flex flex-column mx-auto px-4 ">
        {{> flash}}
        <form  class="contact-form" id="register-form" method="post" action="/register">
        {{> csrf}}
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="username" class="form-label">Username</label>
              {{#if errors.username}}
              <input type="text" name="username" id="username" class="parsley-error"
              placeholder="Enter username" value="{{{errors.username.value}}}" required>
              {{#with errors.username}}
                {{> client/error.partial}}
              {{/with}}
              {{else}}
                {{#if validData.username}}
                <input type="text" name="username" id="username" placeholder="Enter username" value="{{{validData.username}}}" required>
                {{else}}
                <input type="text" name="username" id="username" placeholder="Enter username" required>
                {{/if}}
              {{/if}}
            </div>
          </div>
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="email" class="form-label">Email</label>

              {{#if errors.email}}
              <input type="email" name="email" id="email" class="not-valid"
              placeholder="Enter email" required>
              {{#with errors.email}}
                {{> client/error.partial}}
              {{/with}}
              {{else}}
                {{#if validData.email}}
                <input type="email" name="email" id="email" placeholder="Enter email" value="{{{validData.email}}}" required>
                {{else}}
              <input type="email" name="email" id="email" placeholder="Enter email" required>
                {{/if}}
              {{/if}}
            </div>
          </div>
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="password" class="form-label">Password</label>
              {{#if errors.password}}
              <input type="password" name="password" id="password" class="not-valid"
              placeholder="Enter password" value="{{{errors.password.value.password}}}" required>
              {{#with errors.password}}
                {{> client/error.partial}}
              {{/with}}
              {{else}}
                {{#if validData.password}}
                <input type="password" name="password" id="password" placeholder="Enter password" value="{{{validData.password}}}" required>
                {{else}}
              <input type="password" name="password" id="password" placeholder="Enter password" required>
                {{/if}}
              {{/if}}
            </div>
          </div>
          <div class="row form-group my-3">
            <div class="col-12 form-input">
              <label for="confirm_password" class="form-label">Confirm password</label>
              {{#if errors.confirm_password}}
              <input type="password" name="confirm_password" id="confirm_password" class="not-valid"
              placeholder="Enter password" value="{{{errors.confirm_password.value.confirm_password}}}" required>
              {{#with errors.confirm_password}}
                {{> client/error.partial}}
              {{/with}}
              {{else}}
                {{#if validData.confirm_password}}
                <input type="password" name="confirm_password" id="confirm_password" placeholder="Enter password" value="{{{validData.confirm_password}}}" required>
                {{else}}
                <input type="password" name="confirm_password" id="confirm_password" placeholder="Enter password" required>
                {{/if}}
              {{/if}}
            </div>
          </div>


          <div class="row form-group my-3">
            <div class="col-12">
            <button class="w-100 form-input contact-submit my-2">Register</button>
            </div>
          </div>
        </form>
        
        <div class="row d-flex justify-content-end">
          <div class="col-sm-6">
            <p class="mb-0 font-italic">Already have an account? <a href="/login" class="text-info">Login</a></p>
          </div>
          <div class="col-sm-6 text-right">
            <p class="mb-0 font-italic">Not activated? <a href="/resend-activation" class="text-info">Resend activation</a></p>
          </div>
        </div>
      </div>
    </div><!-- /.row -->
  </div><!-- /.container -->
</section><!-- /.flat-row -->

<!-- End Login Form -->